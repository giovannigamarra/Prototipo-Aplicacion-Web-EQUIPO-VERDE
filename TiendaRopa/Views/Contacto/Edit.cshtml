@model TiendaRopa.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<div class="row">
    <div class="col-md-4">  
        <h1 class="display-4">Editar Contacto</h1>
        <form asp-controller="Contacto" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group formM">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Introduce tu nombre" style="text-align: center" value="" style="padding-top: 7px;" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>    

            <div class="form-group formM">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control"  placeholder="Introduce tu apellido" style="text-align: center" value="" style="padding-top: 7px;" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>               
                   
            <div class="form-group formM">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"   placeholder="Introduce tu email" style="text-align: center" value="" style="padding-top: 7px;"/>
            </div>               

            <div class="form-group formM">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" placeholder="Introduce telefono" style="text-align: center" value="" style="padding-top: 7px;" />
            </div>               

            
            <div class="form-group">
                 <button type="submit" class="btn btn-primary">Actualizar</button> 
            </div>                

        </form>
            
        <td>@Html.DisplayTextFor(model => model.Mensajes)</td>    
    
    </div>
</div>
